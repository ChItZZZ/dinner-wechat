<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <title>我的菜单</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport"/>
    <meta name="author" content=""/>
    <!-- Le styles -->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>

    <![endif]-->
    <!-- Le fav and touch icons -->
    <style>
        .item_name {
            font-size: 13px;
        }

        .order_gray_line {
            /*border-top: 3px solid black !important;*/
            border-bottom: 1px solid lightgray !important;
            margin-bottom: 5px;
            /*padding-bottom: 40px !important*/
        }

        .ac_paid {
            float: right;
            margin-right: 50px;
            font-size: 12px;
        }

        .order_state {
            border-bottom: 1px solid lightgray;
        }

        .order_paid {
            border-top: 1px dotted lightgray;
        }

        .menu_title {
            color: #00a9d5;
        }
    </style>
    <script>
        document.addEventListener('WeixinJSBridgeReady', function onBridgeReady() {
            WeixinJSBridge.call('hideToolbar');
        });
    </script>
</head>
<body style="margin-top:-10px">
<script src="/js/order.js"></script>
<div id="wrapper2" class="viewer wrapper countpage clearfix show" >
    <div class="card-panel teal lighten-2 white-text z-depth-2" id="J_order_Manager">
        <div class="col-xs-12 clearfix board_content">
            <div class="col-xs-4 title_contain">
                <h5 >我的订单</h5>
            </div>
            <div class="col-xs-2">
            </div>
            <div class="col-xs-3 title_contain">
            </div>
        </div>
    </div>
    <section class="oder_content">

        <div class="container" id="J_order_list">

            <% for (var i = 0;i < (arr.length);i++){ %>
            <div class="row card z-depth-1 darken-1 hoverable" id="<%= arr[i]['id'] %>"
                 <% if(arr[i]['state']==0){ %>
                 onclick=payOrder("<%= arr[i]['id'] %>",<%= arr[i].price %>)
                 <% } %>>
                <div class="col-md-12 clearfix card-content order_state">
                    <% if(arr[i]['state']==0){ %>
                    <div class="col-md-6 red-text">
                        订单未支付
                        <% } else{ %>
                    <div class="col-md-6 ">
                        订单已完成
                        <% } %>
                        <span style="font-size: 14px;color: darkgray;">
                            <%= arr[i]['date'] %>
                        </span>
                    </div>
                </div>
                <div class="col s12 clearfix card-action">
                <% for (var j = 0;j < arr[i].items.length;j++){ %>

                    <div class="col s6">
                        <div class="col s6 clearfix item_name"><span>
                                <%= arr[i].items[j]['name'] %>
                            </span></div>
                    </div>
                    <div class="col s6">
                        <div class="btn_wrap counter"><i class="nocounter fl" style="display: inline-block;">
                                <%= arr[i].items[j]['counter'] %> 份
                            </i></div>
                    </div>

                <% } %>
                </div>
                <div class="col-md-12 clearfix card-action order_paid">
                    <span class="ac_paid" id="priceOf<%= arr[i]['id'] %>">实付:
                        <%= arr[i].price %>
                    </span>
                </div>
            </div>
            <% } %>
        </div>
    </section>
</div>
<script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>

</body>
</html>
